{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "globalEnv": [
        "DATABASE_URL",
        "DIRECT_URL",
        "RESEND_API_KEY",
        "RESEND_API_KEY_ENTREPRISES",
        "RESEND_API_KEY_EXTERMINATION"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build",
                "^generate"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "generate": {
            "cache": false
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}